<h1 class="page-header">Categories</h1>

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            Listando Categorias
            <!-- <button class="btn btn-success btn-circle pull-right" type="button" style="margin-top: -5px"><i class="fa fa-plus"></i> -->
            <%= link_to new_backoffice_category_path, class: "btn btn-success btn-circle pull-right", style: "margin-top: -5px" do %>
                <i class="fa fa-plus"></i>
            <% end %>
            </button>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Descrição</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                     <% @categories.each do |c| %>   
                        <tr>
                            <td><%= c.id %></td>
                            <td><%= c.description %></td>
                            <td style="width: 180px">
                            <%= link_to edit_backoffice_category_path(c), class: "btn btn-primary btn-circle" do %>
                                <i class="fa fa-edit"></i>
                            <% end %>
                            <button class="btn btn-danger btn-circle" type="button" disabled="disabled"><i class="fa fa-close"></i>
                            </button></td>
                        </tr>
                    <% end %>
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
