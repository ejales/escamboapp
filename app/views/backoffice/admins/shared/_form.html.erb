<h1 class="page-header">Categories</h1>
<% if @admin.errors.any? %>
    <% @admin.errors.full_messages.each do |message| %>
            <script>
                $.notify("<%= message %>");
            </script>
    <% end %>
<% end %>
<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <%= action %>
        </div>
       <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="col-lg-6">
                <%= form_for([:backoffice, @admin]) do |f| %>
                    <div class="form-group">
                        <!-- <label>Nome</label> -->
                        <%= f.label :name %>
                        <%= f.text_field :name, class: "form-control", placeholder: "Nome do administrador"  %>
                    </div>
                    <div class="form-group">
                        <!-- <label>Email</label> -->
                        <%= f.label :email %>
                        <%= f.text_field :email, class: "form-control", placeholder: "Ex.: teste@teste.com"  %>
                    </div>
                    <% if policy(@admin).edit? %>
                        <div class="form-group"> 
                        <!-- <label>Papel</label> Vai pegar do admins_helper.rb--> 
                            <%= f.label :role %>
                            <%= f.collection_radio_buttons(:role, options_for_roles, :id, :description) do |b| %>
                                    <div class="radio">
                                        <%= b.label {b.radio_button + b.text} %>
                                    </div>
                            <% end %>
                        </div>
                        <% end %>

                    <div class="form-group">
                        <!-- <label>Password</label> -->
                        <%= f.label :password %>
                        <%= f.password_field :password, class: "form-control", placeholder: "Senha" %>
                    </div>
                    <div class="form-group">
                        <label>Confirmar Password</label>
                        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirmar Senha" %>
                    </div>
                    <button class="btn btn-default" type="submit">Salvar</button>
                <% end %>
            </div>
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
